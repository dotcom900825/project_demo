<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= t("site.title") %>.<%= @title if @title %></title>
    <meta name="description" content="<%= defined?(@description) && @description.present? ? @description : t('site.description')  %>">
    <meta name="keywords" content="<%= defined?(@keywords) && @keywords.present? ? @keywords : t('site.keywords')  %>">
    <meta name="author" content="webmaster@<%= SETTINGS['site_domain'] %>">
    <%= render 'shared/site_stylesheets' %>
    <%= csrf_meta_tags %>
    <!--[if lte IE 8]>
      <%= stylesheet_link_tag "style-ie" %>
    <![endif]-->

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <%= yield :header_scripts %>
  </head>

  <body class="home" id="home-index">
    <%= yield :nav %>
    <%= yield :body %>

    <div id='home' class="container page-container">
      <%= render 'shared/header' %>
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>

    <a href="#" class="scrollup">Scroll</a>

    <%= render 'shared/site_javascripts' %>
    <%= yield :footer_scripts %>
    <%= render 'shared/ga' %>
  </body>
</html>

